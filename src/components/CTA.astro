const { href = '/lead', label = '資料ダウンロード', variant = 'primary' } = Astro.props;
const cls =
  variant === 'primary'
    ? 'inline-block rounded-lg bg-cyan px-6 py-3 text-navy font-bold hover:bg-cyan/90 transition-colors'
    : 'inline-block rounded-lg border-2 border-white/80 px-6 py-3 text-white font-bold hover:bg-white/10 transition-colors';
---
<a href={href} class={cls}>{label}</a>

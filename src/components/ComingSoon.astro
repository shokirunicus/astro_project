---
export interface Props {
  title: string;
  description?: string;
  expectedDate?: string;
}

const { title, description, expectedDate } = Astro.props as Props;
---

<div class="coming-soon-container">
  <div class="coming-soon-content">
    <h1>{title}</h1>
    <div class="icon">🚧</div>
    <p class="message">このページは現在準備中です</p>
    {description && <p class="description">{description}</p>}
    {expectedDate && <p class="date">公開予定: {expectedDate}</p>}
    <a href="/" class="back-link">トップページに戻る</a>
  </div>
  
  <style>
    .coming-soon-container {
      min-height: 60vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }

    .coming-soon-content {
      text-align: center;
      max-width: 600px;
    }

    .icon {
      font-size: 4rem;
      margin: 2rem 0;
    }

    h1 {
      font-size: 2rem;
      color: #333;
      margin-bottom: 1rem;
    }

    .message {
      font-size: 1.2rem;
      color: #666;
      margin-bottom: 1rem;
    }

    .description {
      color: #777;
      margin: 1rem 0;
    }

    .date {
      color: #999;
      font-size: 0.9rem;
      margin: 1rem 0;
    }

    .back-link {
      display: inline-block;
      margin-top: 2rem;
      padding: 0.8rem 2rem;
      background: #007bff;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      transition: background 0.3s;
    }

    .back-link:hover {
      background: #0056b3;
    }
  </style>
</div>

